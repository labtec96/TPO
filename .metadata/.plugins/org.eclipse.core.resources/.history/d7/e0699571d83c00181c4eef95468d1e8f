package zad1;

import java.io.File;
import java.io.IOException;
import java.nio.file.FileVisitResult;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.nio.file.SimpleFileVisitor;
import java.util.HashMap;
import java.util.stream.Stream;

public class LoadDictionary
{
	public HashMap<String, Integer> load()
	{
		HashMap<String, Integer> mapa = new HashMap<>();
		try (Stream<Path> paths = Files.walk(Paths.get(System.getProperty("user.dir")+"\\dic"))) 
		{
		    	paths
		        .filter(p -> p.toString().endsWith(".txt"))
		        .forEach(p -> 
		        			{
		        				int nrPortu= 6000;
		        				System.out.println(p.toString());
		        				System.out.println(p.toString().replaceAll(System.getProperty("user.dir")+"\\dic\\", ""));
		        				//mapa.put(p.toString().replaceAll(System.getProperty("user.dir")+"\\dic\\", ""),nrPortu++);
		        			});
		} catch (IOException e)
		{
			// TODO Auto-generated catch block
			e.printStackTrace();
		} 
		return null;
	}
}
